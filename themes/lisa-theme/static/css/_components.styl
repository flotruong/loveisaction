.content
  padding: 1em
  max-width: 1200px

.info
  display: block
  font-size: .75em

.header
  margin-bottom: 1rem

  ul
    display: flex
    align-items: center

    .home
      a
        display: block
        width: 100px
        height: 100px
        background-image: url(/img/logo.svg)

        span
          display: none

  #hamburger
    display: none

  +below($tablet)
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 120px;
    background: white;
    z-index: 1

    #hamburger
      display: block
      position: absolute
      right: 0
      top: 0

    ul
      flex-direction: column;
      justify-content: center;
      position: fixed;
      align-items: center;
      width: 100%;

      .home
        position: absolute
        left: 0
        top: 0

    ul li:not([class~="home"])
      display: none

    #hamburger:checked ~ ul
      height:  100%;
      background: white;

    #hamburger:checked ~ ul li
      display: block

.header + div
  +below($tablet)
    margin-top: 130px

.hero-animation
  animation: text-fade 3s
  animation-fill-mode: forwards
  opacity: 0
  top: 0
  left: 0

@keyframes text-fade
  0%
    opacity: 0
  100%
    opacity: .9

.hero-animation:nth-child(1)
  animation-delay: .2s

.hero-animation:nth-child(2)
  animation-delay: 1s

.col-6-override
  width: 50%
  float: left
