.content
  padding: 1em
  max-width: 1200px

.info
  display: block
  font-size: .75em

.header
  margin-bottom: 1rem

  ul
    display: flex
    align-items: center

    .home
      a
        display: block
        width: 100px
        height: 100px
        background-image: url(/img/logo.svg)

        span
          display: none

.hero-animation
  animation: text-fade 3s
  animation-fill-mode: forwards
  opacity: 0
  top: 0
  left: 0

@keyframes text-fade
  0%
    opacity: 0
  100%
    opacity: .9

.hero-animation:nth-child(1)
  animation-delay: .2s

.hero-animation:nth-child(2)
  animation-delay: 1s

.col-6-override
  width: 50%
  float: left
